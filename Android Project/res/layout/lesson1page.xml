<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <!-- <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     WE WILL MAKE EACH PAGE WHEN IT HAS BABY LESSON AND TIME LINE LIKE 1-2 WEEK.-->

    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        android:layout_height="638dp" >


        <TextView
            android:layout_width="wrap_content"
            android:text="@string/lesson1"
            android:id="@+id/lesson1"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="25sp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tasksdescr"
            android:text="@string/task1descr"
            android:textSize="25sp"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/lesson1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tasksdescr2"
            android:text="@string/task1descr2"
            android:textSize="25sp"
            android:layout_below="@+id/tasksdescr"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="37dp" />


        <Button
            android:text="@string/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:id="@+id/nextl1"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/lesson1"
            android:layout_alignEnd="@+id/lesson1" />


        <Button
            android:text="@string/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:id="@+id/back"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/nextl1"
            android:layout_toStartOf="@+id/nextl1"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp" />




    </RelativeLayout>


</ScrollView>